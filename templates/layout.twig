<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="{{ base_url() }}/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/fontawesome/css/all.min.css">

    <link rel="stylesheet" type="text/css" href="{{ base_url() }}/cookieconsent/cookieconsent.min.css" />
    <script src="{{ base_url() }}/cookieconsent/cookieconsent.min.js"></script>
    <script>
      window.addEventListener("load", function(){
        window.cookieconsent.initialise({
          "palette": {
            "popup": {
              "background": "#000"
            },
            "button": {
              "background": "#f1d600"
            }
          }
      })});
    </script>

    <link rel="stylesheet" href="{{ base_url() }}/main.css">

    <title>{{ block('title') }}</title>
  </head>
  <body class="bg-light">
    <div class="container" role="main">
      <p>
        {% for msg in flash('error') %}
          <div class="alert alert-danger">{{ msg }}</div>
        {% endfor %}
        {% for msg in flash('success') %}
          <div class="alert alert-success">{{ msg }}</div>
        {% endfor %}
        {% for msg in flash('info') %}
          <div class="alert alert-info">{{ msg }}</div>
        {% endfor %}
      </p>

      <p>
        <a href="{{ path_for( isAdminArea ? 'adminHome' : 'home') }}"><i class="fas fa-home"></i>&emsp;Home</a>
      </p>

      {{ block('content') }}
    </div>

    {{ block('modals') }}

    <script src="{{ base_url() }}/jquery/jquery.slim.min.js"></script>
    <script src="{{ base_url() }}/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="{{ base_url() }}/main.js"></script>
  </body>
</html>